<div class="flex flex-col items-center justify-center">
  <div>
    <h1 class="text-2xl text-center pb-10 text-slate-800 dark:text-slate-200">
      New Testament Search
    </h1>
  </div>
  <div class="flex flex-row space-x-5">
    <%= form_with url: search_items_new_test_verses_path, local: true, method: :post, data: {controller: "debounce", debounce_target: "form"} do |form| %>
      <%= form.hidden_field :checkbox_value, value: '0', id: 'checkbox_value' %>
      <%= form.search_field :query, data: {action: "input->debounce#search"}, placeholder: 'search NT verses', class: "search-input-field", id: "search-box" %>
      <%= form.hidden_field :source, value: 'form' %>
    <% end %>
    <label class="inline-flex items-center me-5 cursor-pointer">
      <input type="checkbox" value="" class="sr-only peer" id="toggle-checkbox" onchange="updateText()">
      <div class="relative w-14 h-7 bg-gray-300 peer-focus:outline-none peer-focus:ring-4 ring ring-purple-500 peer-focus:ring-purple-300 dark:peer-focus:ring-purple-800 rounded-full peer dark:bg-gray-700 peer-checked:after:translate-x-full rtl:peer-checked:after:-translate-x-full peer-checked:after:border-white after:content-[''] after:absolute after:top-0.5 after:start-[4px] after:bg-white after:border-gray-300 after:border after:rounded-full after:h-6 after:w-6 after:transition-all dark:border-gray-600 peer-checked:bg-purple-600"></div>
      <span class="ms-3 text-sm font-medium text-gray-900 dark:text-gray-300" id="toggle-text">keyword</span>
    </label>
  </div>
</div>
<div id="search_results" class="flex-col gap-x-5 gap-y-10">
  <%= render "new_test_verses/no_search" %>
</div>
<script>
  function updateText() {
      const checkbox = document.getElementById('toggle-checkbox');
      const text = document.getElementById('toggle-text');
      const hiddenField = document.getElementById('checkbox_value');
      hiddenField.value = checkbox.checked ? '1' : '0';
      text.textContent = checkbox.checked ? 'vector' : 'keyword';
  }
</script>